WindowManager:
    PublicLanding:
    PublicSearch:
    PublicResult:
        id: public_result
    PublicHelp:
    Landing:
    Search:
    Result:
        id: result
    Login:
    Account:
    Help:

<Landing>:
    name: "landing"

    FloatLayout:
        Label:
            text_size: root.width, root.height
            halign: 'center'
            pos_hint: {'y': 0.9}
            font_name: "SourceSansPro"
            bold: True
            color: (137, 137, 137, 1)
            text: "Find an advertise"
        Label:
            text_size: root.width, root.height
            halign: 'left'
            pos_hint: {'x': 0.1, 'y': 0.8}
            font_name: "Times"
            text: "From"
        TextInput:
            size_hint: 0.7, 0.08
            pos_hint: {'x': 0.1, 'y': 0.7}
            size_hint: 0.8, 0.07
        Label:
            text_size: root.width, root.height
            halign: 'left'
            pos_hint: {'x': 0.1, 'y': 0.55}
            font_name: "Times"
            text: "To"
        TextInput:
            size_hint: 0.7, 0.08
            pos_hint: {'x': 0.1, 'y': 0.45}
            size_hint: 0.8, 0.07
        Button:
            pos_hint: {'center_x': 0.5, 'y': 0.2}
            size_hint: 0.5, 0.1
            font_name: "SourceSansPro"
            font_size: 19
            bold: True
            color: (138, 138, 138, 1)
            background_color: (137/255.0, 137/255.0, 137/255.0, 0.6)
            text: "Submit"
            on_release:
                app.root.current = "result"
                root.manager.transition.direction = "down"
        Button:
            pos_hint: {'x': 0, 'y': 0}
            size_hint: 0.333, 0.055
            font_name: "SourceSansPro"
            font_size: 14
            bold: True
            color: (138, 138, 138, 1)
            background_color: (137/255.0, 137/255.0, 137/255.0, 1)
            text: "Search"
            on_release:
                app.root.current = "search"
        Button:
            pos_hint: {'x': 0.333, 'y': 0}
            size_hint: 0.333, 0.055
            font_name: "SourceSansPro"
            font_size: 14
            bold: True
            color: (138, 138, 138, 1)
            background_color: (137/255.0, 137/255.0, 137/255.0, 0.5)
            text: "Account"
            on_release:
                app.root.current = "account"
                root.manager.transition.direction = "left"
        Button:
            pos_hint: {'x': 0.666, 'y': 0}
            size_hint: 0.333, 0.055
            font_name: "SourceSansPro"
            font_size: 14
            bold: True
            color: (138, 138, 138, 1)
